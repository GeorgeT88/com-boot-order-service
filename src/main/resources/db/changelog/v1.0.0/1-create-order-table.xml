<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">



    <changeSet author="GeorgeT88" id="2022-11-17-19.01">

        <preConditions onFail="HALT">
            <not>
                <tableExists schemaName="order" tableName="order"/>
            </not>
        </preConditions>

        <createTable schemaName="order" tableName="order">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address_line1" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="address_line2" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="country" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="zip_postal_code" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
            <column name="last_updated_on" type="datetime"/>
            <column name="state" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="total" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="uuid">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>